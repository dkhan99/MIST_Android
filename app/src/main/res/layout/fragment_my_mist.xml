<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/radio_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <RadioGroup
            android:layout_marginTop="20dp"
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:checkedButton="@+id/my_team_button"
            android:layout_height="wrap_content">


            <RadioButton
                android:text="My Team"
                android:textColor="@color/mistGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radio_button"
                android:button="@null"
                android:textAlignment="center"
                android:id="@+id/my_team_button" />

            <RadioButton
                android:text="My Schedule"
                android:textColor="@color/mistRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radio_button"
                android:layout_toRightOf="@+id/my_team_button"
                android:button="@null"
                android:textAlignment="center"
                android:id="@+id/my_schedule_button" />
        </RadioGroup>

    </RelativeLayout>

    <FrameLayout android:id="@+id/my_mist_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radio_buttons_layout"
        xmlns:android="http://schemas.android.com/apk/res/android" />


</RelativeLayout>