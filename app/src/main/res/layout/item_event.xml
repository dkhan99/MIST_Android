<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/list_item_border"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/event_top_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_height="wrap_content">

    <TextView
        android:text=""
        android:textColor="@color/mistRed"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name_and_time"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event_bottom_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/event_top_row">

    <TextView
        android:text=""
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_location" />
    <TextView
        android:text=""
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_room_num"
        android:layout_toRightOf="@+id/event_location"
        android:layout_marginLeft="8dp"/>

    </RelativeLayout>

</RelativeLayout>