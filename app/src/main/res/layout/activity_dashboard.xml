<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mistapp.mistandroid.DashboardActivity">

    <TextView
        android:text="My Dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/title" />

    <TextView
        android:text="User uid: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:id="@+id/uid" />

    <Button
        android:text="My Team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uid"
        android:layout_alignLeft="@+id/uid"
        android:layout_alignStart="@+id/uid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/my_team" />
    <Button
        android:text="My Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_team"
        android:layout_alignLeft="@+id/my_team"
        android:layout_alignStart="@+id/my_team"
        android:layout_marginTop="10dp"
        android:id="@+id/my_scehedule" />
    <Button
        android:text="Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_scehedule"
        android:layout_alignLeft="@+id/my_scehedule"
        android:layout_alignStart="@+id/my_scehedule"
        android:layout_marginTop="10dp"
        android:id="@+id/help_hotline" />
    <Button
        android:text="Rulebooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_hotline"
        android:layout_alignLeft="@+id/help_hotline"
        android:layout_alignStart="@+id/help_hotline"
        android:layout_marginTop="10dp"
        android:id="@+id/rulebooks" />
    <Button
        android:text="Orientation Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rulebooks"
        android:layout_alignLeft="@+id/rulebooks"
        android:layout_alignStart="@+id/rulebooks"
        android:layout_marginTop="10dp"
        android:id="@+id/orientation_video" />
    <Button
        android:text="Social Media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orientation_video"
        android:layout_alignLeft="@+id/orientation_video"
        android:layout_alignStart="@+id/orientation_video"
        android:layout_marginTop="10dp"
        android:id="@+id/social_media" />
    <Button
        android:text="Competitions/Brackets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/social_media"
        android:layout_alignLeft="@+id/social_media"
        android:layout_alignStart="@+id/social_media"
        android:layout_marginTop="10dp"
        android:id="@+id/brackets" />
    <Button
        android:text="logoutTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brackets"
        android:layout_alignLeft="@+id/brackets"
        android:layout_alignStart="@+id/brackets"
        android:layout_marginTop="10dp"
        android:id="@+id/logout" />


</RelativeLayout>