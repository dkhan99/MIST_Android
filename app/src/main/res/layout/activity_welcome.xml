<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/mist_red_background"
    tools:context="com.mistapp.mistandroid.WelcomeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/original_logo"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:maxWidth="125dp"
        android:maxHeight="125dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="I am a..."
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/i_am_a"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <TextView
        style="@style/welcome_user_type_text"
        android:text="Competitor"
        android:layout_below="@+id/i_am_a"
        android:id="@+id/student" />

    <TextView
        style="@style/welcome_user_type_text"
        android:text="Coach"
        android:layout_below="@+id/student"
        android:id="@+id/coach" />

    <TextView
        style="@style/welcome_user_type_text"
        android:text="Guest"
        android:layout_below="@+id/coach"
        android:id="@+id/guest" />

</RelativeLayout>